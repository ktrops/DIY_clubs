

<% if Event.count == 0 %>
	<h3><%= p "no events are create yet"%></h3><br>
	<h3><%= link_to "make a new event", new_event_path%></h3>
<% else %>
	<p><%= notice %> </p>
	<% @event.each do |event| %>
		<%= link_to "<p>#{event.name} #{event.event_date}</p>".html_safe, event_path(event.id) %>
	<% end %>
<% end %>
